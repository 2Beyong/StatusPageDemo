<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp">

    <com.hongon.statuspagedemo.View.ButtonView
        android:id="@+id/CircleA"
        android:layout_width="80dp"
        android:layout_height="80dp"


        android:layout_marginStart="5dp"

        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/bigView"
        app:layout_constraintEnd_toEndOf="@+id/bigView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/bigView"
        app:layout_constraintRight_toRightOf="@+id/bigView"
        app:layout_constraintStart_toStartOf="@+id/bigView"
        app:layout_constraintTop_toTopOf="@+id/bigView"
        app:layout_constraintVertical_bias="0.0" />

    <com.hongon.statuspagedemo.View.ButtonView
        android:id="@+id/CircleB"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/bigView"
        app:layout_constraintEnd_toEndOf="@+id/bigView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bigView"
        app:layout_constraintTop_toTopOf="@+id/bigView"
        app:layout_constraintVertical_bias="0.0" />

    <com.hongon.statuspagedemo.View.ButtonView
        android:id="@+id/CircleC"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/bigView"
        app:layout_constraintEnd_toEndOf="@+id/bigView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="@+id/bigView"
        app:layout_constraintStart_toStartOf="@+id/bigView"
        app:layout_constraintTop_toTopOf="@+id/bigView"
        app:layout_constraintVertical_bias="1.0" />

    <com.hongon.statuspagedemo.View.ButtonView
        android:id="@+id/CircleD"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/bigView"
        app:layout_constraintEnd_toEndOf="@+id/bigView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/bigView"
        app:layout_constraintStart_toStartOf="@+id/bigView"
        app:layout_constraintTop_toTopOf="@+id/bigView"
        app:layout_constraintVertical_bias="1.0" />

    <com.hongon.statuspagedemo.View.ButtonView
        android:id="@+id/CircleE"
        android:layout_width="80dp"
        android:layout_height="80dp"


        app:layout_constraintBottom_toBottomOf="@+id/bigView"
        app:layout_constraintEnd_toEndOf="@+id/bigView"
        app:layout_constraintLeft_toLeftOf="@+id/bigView"
        app:layout_constraintRight_toRightOf="@+id/bigView"
        app:layout_constraintStart_toStartOf="@+id/bigView"
        app:layout_constraintTop_toTopOf="@+id/bigView" />

    <com.hongon.statuspagedemo.View.ButtonView
        android:id="@+id/CircleF"
        android:layout_width="80dp"
        android:layout_height="80dp"


        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/bigView"
        app:layout_constraintEnd_toEndOf="@+id/bigView"
        app:layout_constraintLeft_toLeftOf="@+id/bigView"
        app:layout_constraintRight_toRightOf="@+id/bigView"
        app:layout_constraintStart_toStartOf="@+id/bigView"
        app:layout_constraintTop_toTopOf="@+id/bigView"
        app:layout_constraintVertical_bias="1.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="191dp"
        android:layout_marginStart="192dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_end="192dp"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iconSun"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/CircleA"
        app:layout_constraintEnd_toEndOf="@+id/CircleA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/CircleA"
        app:layout_constraintTop_toTopOf="@+id/CircleA"
        app:layout_constraintVertical_bias="0.125"
        app:srcCompat="@drawable/ic_sun" />

    <ImageView
        android:id="@+id/iconGrid"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/CircleB"
        app:layout_constraintEnd_toEndOf="@+id/CircleB"
        app:layout_constraintStart_toStartOf="@+id/CircleB"
        app:layout_constraintTop_toTopOf="@+id/CircleB"
        app:layout_constraintVertical_bias="0.120000005"
        app:srcCompat="@drawable/ic_grid" />

    <ImageView
        android:id="@+id/iconLoad"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/CircleC"
        app:layout_constraintEnd_toEndOf="@+id/CircleC"
        app:layout_constraintStart_toStartOf="@+id/CircleC"
        app:layout_constraintTop_toTopOf="@+id/CircleC"
        app:layout_constraintVertical_bias="0.120000005"
        app:srcCompat="@drawable/ic_load" />

    <ImageView
        android:id="@+id/iconBattery"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/CircleD"
        app:layout_constraintEnd_toEndOf="@+id/CircleD"
        app:layout_constraintStart_toStartOf="@+id/CircleD"
        app:layout_constraintTop_toTopOf="@+id/CircleD"
        app:layout_constraintVertical_bias="0.120000005"
        app:srcCompat="@drawable/ic_battery" />

    <ImageView
        android:id="@+id/iconInverter"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/CircleE"
        app:layout_constraintEnd_toEndOf="@+id/CircleE"
        app:layout_constraintStart_toStartOf="@+id/CircleE"
        app:layout_constraintTop_toTopOf="@+id/CircleE"
        app:srcCompat="@drawable/ic_inverter" />

    <ImageView
        android:id="@+id/iconBackup"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/CircleF"
        app:layout_constraintEnd_toEndOf="@+id/CircleF"
        app:layout_constraintStart_toStartOf="@+id/CircleF"
        app:layout_constraintTop_toTopOf="@+id/CircleF"
        app:layout_constraintVertical_bias="0.120000005"
        app:srcCompat="@drawable/ic_inverter" />

    <com.hongon.statuspagedemo.View.BigView
        android:id="@+id/bigView"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="32dp"
        android:layerType="software"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_WorkMode" />

    <TextView
        android:id="@+id/tv_PV_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0kw"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iconSun"
        app:layout_constraintStart_toStartOf="@+id/iconSun"
        app:layout_constraintTop_toBottomOf="@+id/iconSun" />

    <TextView
        android:id="@+id/tv_Load_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0kw"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iconLoad"
        app:layout_constraintStart_toStartOf="@+id/iconLoad"
        app:layout_constraintTop_toBottomOf="@+id/iconLoad" />

    <TextView
        android:id="@+id/tv_BAT_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0kw"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iconBattery"
        app:layout_constraintStart_toStartOf="@+id/iconBattery"
        app:layout_constraintTop_toBottomOf="@+id/iconBattery" />

    <TextView
        android:id="@+id/tv_Ultility_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0kw"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iconGrid"
        app:layout_constraintStart_toStartOf="@+id/iconGrid"
        app:layout_constraintTop_toBottomOf="@+id/iconGrid" />

    <TextView
        android:id="@+id/tv_Backup_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0kw"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iconBackup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iconBackup"
        app:layout_constraintTop_toBottomOf="@+id/iconBackup" />

    <TextView
        android:id="@+id/tv_WorkMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="工作状态:N/A"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>